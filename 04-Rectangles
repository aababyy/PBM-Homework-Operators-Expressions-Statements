using System;

class Rectangles
{
    static void Main()
    {
        Console.Write("Enter the width of a rectangle, please: ");
        double width = double.Parse(Console.ReadLine());
        Console.Write("Enter the height of a rectangle, please: ");
        double height = double.Parse(Console.ReadLine());

        //Version 1
        Console.WriteLine("The rectangle’s perimeter is " + ((2 * width) + (2 * height)));
        Console.WriteLine("The rectangle’s area  is " + (width * height));

        /*
        Version 2
        double perimeter = (2 * width) + (2 * height);
        double area = width * height;
        Console.WriteLine("The rectangle’s perimeter is " + perimeter);
        Console.WriteLine("The rectangle’s area  is " + area);
        */
    }
}
