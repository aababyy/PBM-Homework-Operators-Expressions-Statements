using System;

class CheckBitAtGivenPosition
{
    static void Main()
    {
        Console.Write("n = ");
        int n = int.Parse(Console.ReadLine());
        Console.Write("p = ");
        int p = int.Parse(Console.ReadLine());
        int nRightP = n >> p;
        int bit = nRightP & 1;
        bool checkBit = bit == 1;
        //bool isOne (n & (1 << p) > 0;
        Console.WriteLine(checkBit);
        //page 23 from the presentation
    }
}
